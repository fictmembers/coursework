<%= render 'layouts/header' %>

<div class="row">
  <div class="col s8 offset-s2">
    <div class="card">
      <div class="card-content cyan darken-4">
        <span class="card-title white-text">Table #<%= session[:table] %></span>
      </div>
      <div class="card-content">
        <span class="card-title">
                          Current reservations:
                            <b><%= @restaurant.name %></b> -
                            <i>Hall <%= @hall.hall_type %></i>
        </span>
        <div class="row">
          <div class="col s8">
            <ul class="collapsible" data-collapsible="accordion">
              <li>
                <div class="collapsible-header active"><i class="material-icons">today</i>Today</div>
                <% @today.each do |f| %>
                  <div class="collapsible-body"><p>Reservation from: <%= f.from %>:00</p></div>
                <% end %>
                <% if @today == nil %>
                  <p>Table is free for today!</p>
                <% end %>
              </li>
              <li>
                <div class="collapsible-header"><i class="material-icons">today</i>Tommorow</div>
                <% @tommorow.each do |f| %>
                  <div class="collapsible-body"><p>Reservation from: <%= f.from %>:00</p></div>
                <% end %>
                <% if @today == nil %>
                  <p>Table is free for tommorow!</p>
                <% end %>
              </li>
            </ul>
          </div>
          <div class="col s4">
            <div class="card">
              <div class="card-content">
                <span class="card-title">Need another date?</span>
                Call to our us: <br>
                <span class="pushed"><%= @restaurant.tel %></span></br>
                <% if @hostess != nil %>
                  <ul>
                  <% @hostess.each do |f| %>
                    <li class="pushed">Hostess <i><%= f.lastname %></i></li>
                  <% end %>
                  </ul>
                <% end %>
              </div>
              <div class="card-action">
                <%= link_to "Reserve this table!", new_reservation_path %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="card-action">
        <%= link_to "Back to main page", root_path %>
      </div>
    </div>
  </div>
</div>
