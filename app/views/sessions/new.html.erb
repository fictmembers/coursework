<%= render 'layouts/header' %>
<div class="row">
  <div class="col s4 offset-s4">
        <div class="card">
          <%= form_for(:session, url: sessions_path) do |f| %>
          <div class="card-content">
          <span class="card-title">Authorisation</span>
              <div class="field">
                  <div class="input-field col s10">
                    <i class="material-icons prefix">perm_identity</i>
                    <%= f.text_field :login,        :placeholder => "Login", class: "validate", id: "icon_prefix" %>
                  </div>
                  <div class="input-field col s10">
                    <i class="material-icons prefix">lock_outline</i>
                    <%= f.password_field :password, :placeholder => "Password", class: "validate", id: "icon_prefix" %>
                  </div>
              <p>
                <%= f.submit "Login", class: "btn blue-grey darken-4" %>
              </p>
              </div>
          </div>
          <% end %>
        </div>
  </div>
</div>
