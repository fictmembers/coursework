<%= render 'layouts/header' %>
<div class="row">
  <div class="col s4 offset-s4">
    <div class="card">
      <div class="card-image">
        <%= image_tag("administrator_new.jpg")%>
        <span class="card-title grey-text text-lighten-2">Hello, new manager! Join us now:</span>
      </div>
      <%= form_for(@manager) do |f| %>
        <div class="card-content">
          <div class="field">
            <div class="input-field">
              <i class="material-icons prefix">account_circle</i>
                <%= f.text_field :lastname,     :placeholder => "Name and Lastname", class: "validate", id: "icon_prefix" %>
            </div>
            <div class="input-field">
              <%= f.select :restaurant_id, restaurant_select, class: "input-field col s4", :prompt => "Choose jobplace"%>
            </div>
          </div>
        </div>
        <div class="card-action">
          <%= f.submit "Save", class: "btn waves-effect waves-light cyan darken-4", style: "margin: auto;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
