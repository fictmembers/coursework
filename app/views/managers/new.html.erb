<%= render 'layouts/header' %>
<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-image">
        <%= image_tag("manager.jpg")%>
        <span class="card-title grey-text text-lighten-2">
          <%=t :hello_manager %></span>
      </div>
      <%= form_for(@manager) do |f| %>
      <div class="card-content">
        <div class="field">
          <div class="input-field">
            <i class="material-icons prefix">account_circle</i>
            <%= f.text_field :lastname,     :placeholder => "#{t('name_lastname')}", class: "validate", id: "icon_prefix" %>
            <%= f.select :lang, options_for_select([['Russian', 'ru'], ['English', 'en']]),   :placeholder => "#{t('select_lang')}", class: "input-field col s4" %>
          </div>
          <div class="input-field">
            <%= f.select :restaurant_id, restaurant_select, class: "input-field col s4", :prompt => "#{t('jobplace')}"%>
          </div>
        </div>
      </div>
      <div class="card-action">
        <%= f.submit "#{t('save_info')}", class: "btn waves-effect waves-light blue-grey darken-4", style: "margin: auto;" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
