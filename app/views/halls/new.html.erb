<%= render 'layouts/header' %>
<div class="row">
  <div class="col s4 offset-s4">
        <div class="card">
          <div class="card-image">
            <%= image_tag("customer.jpg")%>
            <span class="card-title grey-text text-lighten-2"> <%=t :hello_hall %></span>
          </div>
          <div class="card-content">
            <%= form_for(@hall) do |f| %>
              <div class="field">
                <%= f.text_field :hall_type,      :placeholder => "#{t('hall_type')}" %> </br>
                <%= f.collection_select :restaurant_id, Restaurant.all, :id, :name, { prompt: "#{t('select_rest')}" }, class: "browser-default" %>
              </div>
          <div class="card-action">
            <button class="btn waves-effect waves-light blue-grey darken-4" type="submit" name="action"> <%=t :save_info %></button>
          </div>
        </div>
      </div>
    </div>
    <% end %>
