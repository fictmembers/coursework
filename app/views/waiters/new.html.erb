<%= render 'layouts/header' %>
<div class="row">
  <div class="col s4 offset-s4">
    <div class="card">
      <div class="card-image">
        <%= image_tag("waiter.jpg")%>
        <span class="card-title grey-text text-lighten-2">
          <%=t :hello_waiter %></span>

      </div>
      <div class="card-content">
        <%= form_for(@waiter) do |f| %>
        <div class="field">
          <%= f.text_field :lastname,     :placeholder => "#{t('name_lastname')}" %>
        </br>
        <%= f.collection_select :restaurant_id, Restaurant.where(lang:I18n.locale), :id, :name, { prompt: "#{t('jobplace')}" }, class: "browser-default" %>
      </div>
      <div class="card-action">
        <button class="btn waves-effect waves-light blue-grey darken-4" type="submit" name="action">
          <%=t :save_info %></button>
      </div>
    </div>
  </div>
</div>
<% end %>
