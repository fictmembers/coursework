<%= render 'layouts/header' %>

	<div class="row">
		<div class="col s10 offset-s1">
			<table id="waiter">
			    <thead>
			          <tr>
										<th data-field="id">ID</th>
                    <th data-field="restaurant">Restaurant</th>
			              <th data-field="lastname">Lastname</th>
			              <th data-field="created_at">Created at</th>
				            <th data-field="edit">Edit</th>
		    				    <th data-field="delete">Delete</th>
			          </tr>
			    </thead>

			    <tbody>
			    	<% @waiters.each do |waiter| %>
						<% restaurant = Restaurant.find(waiter.restaurant_id) %>
			          <tr>
									<td><%= waiter.id %></td>
			            <td><%= restaurant.name %></td>
			            <td><%= waiter.lastname %></td>
			            <td><%= waiter.created_at %></td>
                  <td><%= link_to 'Edit', edit_waiter_path(waiter) %></td>
	    					  <td><%= link_to "Delete", waiter, method: :delete, data: { confirm: "You sure?" } %></td>
			          </tr>
			        <% end %>
			    <tbody>
			</table>
		</div>
	</div>
