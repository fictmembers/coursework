<%= render 'layouts/header' %>

	<div class="row">
		<div class="col s10 offset-s1">
			<table id="hostess">
			    <thead>
			          <tr>
										<th data-field="id">ID</th>
			              <th data-field="lastname"> <%=t :name_lastname %></th>
			              <th data-field="restaurant"> <%=t :restaurant %></th>
										<th data-field="created_at"> <%=t :created %></th>
                    <th data-field="edit"> <%=t :edit %></th>
		    				    <th data-field="delete"> <%=t :delete %></th>
			          </tr>
			    </thead>

			    <tbody>
			    	<% @hostesses.each do |hostess| %>
						<% restaurant = Restaurant.find(hostess.restaurant_id) %>
			          <tr>
									<td> <%= hostess.id %></td>
			            <td> <%= hostess.lastname %></td>
			            <td> <%= restaurant.name %></td>
									<td> <%= hostess.created_at %></td>
			            <td> <%= link_to "#{t('edit')}", edit_hostess_path(hostess) %></td>
	    					  <td> <%= link_to "#{t('delete')}", hostess, method: :delete, data: { confirm: "#{t('you_sure')}" } %></td>
			          </tr>
			        <% end %>
			    <tbody>
			</table>
		</div>
	</div>
