<%= render 'layouts/header' %>

<div class="row">
  <div class="col s4 offset-s4 hide-on-med-and-down">
    <div class="card">
      <%= form_for(:session, url: usersessions_path) do |f| %>
      <div class="card-content">
        <span class="card-title">
          <%=t :hi_dear %></span>
        <div class="field">
          <div class="input-field col s10">
            <i class="material-icons prefix">perm_identity</i>
            <%= f.text_field :email,        :placeholder => "email", class: "validate", id: "icon_prefix" %>
          </div>
          <div class="input-field col s10">
            <i class="material-icons prefix">lock_outline</i>
            <%= f.password_field :password, :placeholder => "#{t('password')}", class: "validate", id: "icon_prefix" %>
          </div>
          <p>
            <%= f.submit "#{t('login')}", class: "btn blue-grey darken-4" %>
          </p>
        </div>
      </div>
      <div class="card-action">
        <%= link_to "#{t('not_registred')}", user_signup_path %>
      </div>
      <% end %>
    </div>
  </div>

  <div class="col s12 hide-on-large-only">
    <div class="card">
      <%= form_for(:session, url: usersessions_path) do |f| %>
      <div class="card-content">
        <span class="card-title">
          <%=t :hi_dear %></span>
        <div class="field">
          <div class="input-field">
            <i class="material-icons prefix">perm_identity</i>
            <%= f.text_field :email,        :placeholder => "email", class: "validate", id: "icon_prefix" %>
          </div>
          <div class="input-field">
            <i class="material-icons prefix">lock_outline</i>
            <%= f.password_field :password, :placeholder => "#{t('password')}", class: "validate", id: "icon_prefix" %>
          </div>
          <p>
            <%= f.submit "#{t('login')}", class: "btn blue-grey darken-4" %>
          </p>
        </div>
      </div>
      <div class="card-action">
        <%= link_to "#{t('not_registred')}", user_signup_path %>
      </div>
      <% end %>
    </div>
  </div>
</div>
