<%= render 'layouts/header' %>
<div class="row">
  <div class="col s4 offset-s4">
        <div class="card">
          <div class="card-image">
            <%= image_tag("administrator_new.jpg")%>
            <span class="card-title grey-text text-lighten-2">Make order:</span>

          </div>
          <div class="card-content">
              <% items = Item.all %>
            <%= form_for(@order) do |f| %>
              <div class="field">
                <%= f.collection_select :customer_id, Customer.all, :id, :lastname, { prompt: "-Select customer-" }, class: "browser-default" %>
                <%= f.collection_select :waiter_id, Waiter.all, :id, :lastname, { prompt: "-Select waiter-" }, class: "browser-default" %>
                <%= f.collection_select :manager_id, Manager.all, :id, :lastname, { prompt: "-Select manager-" }, class: "browser-default" %>
                <%= f.collection_select :chef_id, Chef.all, :id, :lastname, { prompt: "-Select chef-" }, class: "browser-default" %>

          </div>

          <div class="row">
            <% Menu.all.each do |f| %>
            <div class="col s4">
              <%= hidden_field_tag "order[item_ids][]", nil %>
            <h5> <%= f.cuisine %></h5>
            <% current_cuisine = Item.where(menu_id: f.id) %>
            <% current_cuisine.each do |item| %>
            <%= check_box_tag "order[item_ids][]", item.id, @order.item_ids.include?(item.id), id: dom_id(item) %>
            <%= label_tag dom_id(item), item.description %><br>
            <% end %>
            </br></br>
            </div>
          <% end %>
          </div>


          <div class="card-action">
            <button class="btn waves-effect waves-light cyan darken-4" type="submit" name="action">Save information</button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
