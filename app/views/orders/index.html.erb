<%= render 'layouts/header' %>

<div class="row">
  <div class="col s10 offset-s1">
    <table id="order">
      <thead>
        <tr>
          <th data-field="id">
            ID</th>
          <th data-field="restaurant">
            <%=t :restaurant %></th>
          <th data-field="customer">
            <%=t :customer %></th>
          <th data-field="details">
            <%=t :detail %></th>
          <th data-field="created_at">
            <%=t :created %></th>
          <th data-field="edit">
            <%=t :edit %></th>
          <th data-field="delete">
            <%=t :delete %></th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
        <% restaurant = Restaurant.find(order.restaurant_id) %>
        <% customer = Customer.find(order.customer_id) %>
        <tr>
          <td> <%= order.id %></td>
          <td> <%= restaurant.name %></td>
          <td> <%= customer.lastname %></td>
          <td> <%= link_to "#{t('view_details')}", order %></td>
          <td> <%= order.created_at %></td>
          <td> <%= link_to "#{t('edit')}", edit_order_path(order) %></td>
          <td> <%= link_to "#{t('delete')}", order, method: :delete, data: { confirm: "#{t('you_sure')}" } %></td>
        </tr>
        <% end %>
        <tbody></table>
      </div>
    </div>
