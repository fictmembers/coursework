<%= render 'layouts/header' %>

<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-image">
          <%= image_tag "reservation.jpg" %>
          <span class="card-title black-text">Thank you for reservation!</span>
      </div>
      <div class="card-content">
          <ul>
            <li class="pushed">Restaurant: <b><%= @restaurant.name %></b></li>
            <li class="pushed">Hall: <%= @hall.hall_type %></li>
            <li class="pushed">Table #<%= @table.id %></li>
          </ul>
      </div>
      <div class="card-action">
        <%= link_to "Make new order", new_order_path %>
        <%= link_to "Back to home page", root_path %>
      </div>
    </div>
  </div>
</div>
