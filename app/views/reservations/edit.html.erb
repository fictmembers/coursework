<%= render 'layouts/header' %>
<div class="row">
  <div class="col s4 offset-s4">
        <div class="card">
          <div class="card-image">
            <%= image_tag("administrator_new.jpg")%>
            <span class="card-title grey-text text-lighten-2">Reserve a table for your company! Just fill this fields:</span>
          </div>
          <div class="card-content">
            <%= form_for(@reservation) do |f| %>
              <div class="field">
                <%= f.collection_select :customer_id, Customer.all, :id, :lastname, { prompt: "-Select customer-" }, class: "browser-default" %>
                <%= f.collection_select :table_id, Table.all, :id, :visnumber, { prompt: "-Select table-" }, class: "browser-default" %>
                <%= f.text_field :reserv_time , type: "date", class: "datepicker"%>
              </div>
          <div class="card-action">
            <button class="btn waves-effect waves-light cyan darken-4" type="submit" name="action">Save information</button>
          </div>
        </div>
      </div>
    </div>
    <% end %>
