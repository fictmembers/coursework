<%= render 'layouts/header' %>
<div class="row">
  <div class="col s8 offset-s2 hide-on-med-and-down">
    <div class="card">
      <div class="card-image">
        <%= image_tag "hall.jpg" %>
        <span class="card-title white-text"> <%= @restaurant.name %></span>
      </div>
      <div class="card-content">
        <div class="row">
          <% @halls.each do |f| %>
          <div class="col s6">
            <div class="card">
              <div class="card-action"> <%= link_to f.hall_type, f %></div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      <div class="card-action">
        <%= link_to "#{t('back_to_main')}", root_path %>
      </div>
    </div>
  </div>

  <div class="col s12 hide-on-large-only">
    <div class="card">
      <div class="card-image">
        <%= image_tag "hall.jpg" %>
        <span class="card-title white-text"> <%= @restaurant.name %></span>
      </div>
      <div class="card-content">
        <h4>  <%=t :choose_prefered%></p> </h4>
        <p>
          <% @halls.each do |f| %>
          <div class="card">
            <div class="card-action"><%= link_to f.hall_type, f %></div>
          </div>
          <% end %>
        </p>
      </div>
      <div class="card-action">
        <%= link_to "#{t('back_to_main')}", root_path %>
      </div>
    </div>
  </div>
