<div class="panel">
  <%= render 'layouts/header' %>

<div class="row">
  <div class="col s4 offset-s4">
        <div class="card">
          <div class="card-image">
            <%= image_tag("cahier.jpg")%>
            <span class="card-title grey-text text-lighten-2">Hello, new cashier! Help us count money:</span>

          </div>
          <div class="card-content">
            <%= form_for(@cashier) do |f| %>
              <div class="field">
                <%= f.text_field :lastname,     :placeholder => "#{t('name_lastname')}" %> </br>
                <%= f.select :lang, options_for_select([['Russian', 'ru'], ['English', 'en']]), :prompt => "#{t('choose_language')}", class: "browser-default" %></br>
                <%= f.collection_select :restaurant_id, Restaurant.all, :id, :name, { prompt: "-Select jobplace-" }, class: "browser-default" %>
              </div>
              <div class="card-action">
                <button class="btn waves-effect waves-light blue-grey darken-4" type="submit" name="action">Save information</button>
              </div>
            <% end %>
          </div>
      </div>
    </div>
</div>
