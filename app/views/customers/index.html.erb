<%= render 'layouts/header' %>

	<div class="row">
		<div class="col s10 offset-s1">
			<table id="customer">
			    <thead>
			          <tr>
										<th data-field="id">ID</th>
			              <th data-field="lastname"> <%=t :name_lastname %></th>
										<th data-field="created_at"> <%=t :created %></th>
                    <th data-field="edit"> <%=t :edit %></th>
		    				    <th data-field="delete"> <%=t :delete %></th>
			          </tr>
			    </thead>

			    <tbody>
			    	<% @customers.each do |customer| %>
			          <tr>
									<td> <%= customer.id %></td>
			            <td> <%= customer.lastname %></td>
									<td> <%= customer.created_at %></td>
			            <td> <%= link_to "#{t('edit')}", edit_customer_path(customer) %></td>
	    					  <td> <%= link_to "#{t('delete')}", customer, method: :delete, data: { confirm: "#{t('you_sure')}" } %></td>
			          </tr>
			        <% end %>
			    <tbody>
			</table>
		</div>
	</div>
