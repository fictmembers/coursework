<%= render 'layouts/header' %>
<div class="row">
  <div class="col s4 offset-s4">
        <div class="card">
          <div class="card-image">
            <%= image_tag("administrator_new.jpg")%>
            <span class="card-title grey-text text-lighten-2">Edit review</span>
          </div>
          <%= form_for(@review_book) do |f| %>
            <div class="card-content">
                <%= f.text_field :customer,        :placeholder => "First and Lastname", id: "icon_prefix" %>
                <%= f.select :restaurant_id, restaurant_select, class: "input-field col s4", :prompt => "Choose Restaurant"%>
                <%= f.select :review_type, options_for_select([["commendation (+)", "commendation"], ["complaint (-)", "complaint"]]), :prompt => "Review Type", class: "input-field col s4" %></br>
                <%= f.text_area :review, :placeholder => "Text" %>
            </div>
            <div class="card-action">
              <%= f.submit "Save",class: "btn waves-effect waves-light blue-grey darken-4"%>
            </div>
          <% end %>
      </div>
    </div>
</div>
