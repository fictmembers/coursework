<%= render 'layouts/header' %>
<div class="row">
  <div class="col s12 m6 offset-m3">
    <div class="card">

      <div class="card-image">
        <%= image_tag("review.jpg")%>
      </div>

      <%= form_for(@review_book) do |f| %>
      <div class="card-content">
        <h4><%=t :hello_review %></h4>
          <div class="input-field">
            <i class="material-icons prefix">perm_identity</i>
            <%= f.text_field :customer,        :placeholder => "#{t('name_lastname')}", id: "icon_prefix" %>
          </div>
          <div class="input-field">
            <%= f.select :lang, options_for_select([['Russian', 'ru'], ['English', 'en']]), :prompt => "#{t('choose_language')}", class: "browser-default" %>
          </div>
          <div class="input-field">
            <%= f.select :restaurant_id, restaurant_select, class: "input-field col s4", :prompt => "#{t('select_rest')}"%>
          </div>
          <div class="input-field">
            <%= f.select :review_type, options_for_select([["commendation (+)", "commendation"], ["complaint (-)", "complaint"]]), :prompt => "#{t('review_type')}", class: "input-field col s4" %></br>
            <%= f.text_area :review, :placeholder => "#{t('text')}" %></br>
          </div>
      </div>
      <div class="card-action">
        <button class="btn waves-effect waves-light blue-grey darken-4" type="submit" name="action"> <%=t :save_info %></button>
      </div>
      <% end %>

    </div>
  </div>
</div>
