<%= render 'layouts/header' %>

<div class="row">

  <div class="col s2 hide-on-med-and-down">
  <div class="fixed-div">
    <div class="card">
      <div class="card-content ">
        <h4> <%= current_administrator.login.capitalize %></h4>
        <h5> <%=t :contro_panel %></h5>
        <b> <%= link_to "#{t('add_restaurant')}", new_restaurant_path %></b>
      </br> <%= link_to "#{t('add_admin')}", new_administrator_path %>
    </br> <%= link_to "#{t('top_waiters')}", topwaiters_path %>
  </br> <%= link_to "#{t('top_dishes')}", lastweektop_path %>
      </div>
      <div class="card-action">
        <%= link_to "#{t('signout')}", signout_path, method: "delete" %>
      </div>
    </div>
  </div>
  </div>

  <div class="col s8 offset-s2">
    <div class="card">
      <div class="card-content blue-grey darken-4">
        <span class="card-title white-text"> <%=t :top_kitchen %></span>
      </div>

      <div class="card-content">
      <p><h4> <%=t :top_by_num %></h4></p>

      <div class="row">
        <div class="col s6">
          <table>
			      <thead>
              <tr>
                <th> <%=t :waiter %></th>
                <th> <%=t :orders_num %></th>
              </tr>
            </thead>
            <tbody>
              <% @waiters.each do |f| %>
                <tr>
                  <td>
                    <% if f != @waiters.first %>
                      <i><%= f.lastname %></i>
                    <% else %>
                      <b><%= f.lastname %></b>
                    <% end %>
                  </td>
                  <td>
                    <div class="center">
                      <i><%= f.orders_number %></i>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="col s6">
          <table>
            <thead>
              <tr>
                <th> <%=t :chef %></th>
                <th> <%=t :dish_num %></th>
              </tr>
            </thead>
            <tbody>
              <% @chefs.each do |f| %>
                <tr>
                  <td>
                    <% if f != @chefs.first %>
                      <i><%= f.lastname %></i>
                    <% else %>
                      <b><%= f.lastname %></b>
                    <% end %>
                  </td>
                  <td>
                    <div class="center">
                      <i><%= f.orders_pcs %></i>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="card-action">
        <%= link_to "#{t('back_to_adm')}", controlpanel_path %>
      </div>

    </div>
  </div>
</div>
