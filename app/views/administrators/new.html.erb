<%= render 'layouts/header' %>
<div class="row">
  <div class="col s4 offset-s4">
        <div class="card">
          <div class="card-image">
            <%= image_tag("administrator_new.jpg")%>
            <span class="card-title grey-text text-lighten-2">Hello, new administrator! Join us now:</span>

          </div>
          <div class="card-content">
            <%= form_for(@administrator) do |f| %>
              <div class="field">
                <%= f.label :administrator %><br>
                <%= f.text_field :lastname,     :placeholder => "Lastname" %> </br>
                <%= f.telephone_field :tel,     :placeholder => "Telephone" %> </br>
                <%= f.select :restaurant_id, restaurant_select, class: "select", :prompt => "Choose jobplace"%>
              </div>
          </div>
          <div class="card-action">
            <button class="btn waves-effect waves-light cyan darken-4" type="submit" name="action">Save information</button>
          </div>
        </div>
      </div>
    </div>

    <% end %>
