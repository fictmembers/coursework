<%= render 'layouts/header' %>

	<div class="row">
		<div class="col s6 offset-s3">
      <div class="card">
        <div class="card-content">
    			<table id="alldayslong">
    			    <thead>
    			          <tr>
    										<th data-field="day">
													<%=t :day %>
                        </th>
    			              <th data-field="restaurant">
													<%=t :restaurant %>
                        </th>
    		    				    <th data-field="reservations">
													<%=t :reservations %>
                        </th>
    			          </tr>
    			    </thead>

    			    <tbody>
    			    	<% @rating.each do |row| %>

    			          <tr>
    									<td>
                        <center>
                          <%= Date::DAYNAMES[row.restday] %>
                        </center>
                      </td>
    			            <td>
                        <center>
                          <%= row.restname %>
                        </center>
                      </td>
    			            <td>
                        <center>
                        <%= row.total.to_i %> Res.
                        </center>
                      </td>
    			          </tr>
    			        <% end %>
    			    <tbody>
    			</table>
        </div>
        </div>
		</div>
	</div>
