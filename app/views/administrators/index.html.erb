<%= render 'layouts/header' %>

	<div class="row">
		<div class="col s10 offset-s1">
			<table id="administrator">
			    <thead>
			          <tr>
										<th data-field="id">ID</th>
			              <th data-field="lastname">Lastname</th>
			              <th data-field="restaurant">Restaurant</th>
			              <th data-field="created_at">Created at</th>
				            <th data-field="edit">Edit</th>
		    				    <th data-field="delete">Delete</th>
			          </tr>
			    </thead>

			    <tbody>
			    	<% @administrators.each do |administrator| %>
			          <tr>
									<td><%= administrator.id %></td>
			            <td><%= administrator.lastname %></td>
			            <td><%= administrator.restaurant_id %></td>
			            <td><%= administrator.created_at %></td>
                  <td><%= link_to 'Edit', edit_administrator_path(administrator) %></td>
	    					  <td><%= link_to "Delete", administrator, method: :delete, data: { confirm: "You sure?" } %></td>
			          </tr>
			        <% end %>
			    <tbody>
			</table>
		</div>
	</div>
