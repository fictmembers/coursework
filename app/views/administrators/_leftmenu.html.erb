<!-- Left nav bar-->
<div class="col s2 hide-on-med-and-down">
  <div class="fixed-div">
    <div class="card">
      <div class="card-content ">
        <h4><%= current_administrator.login.capitalize %></h4>
        </br><%= link_to "MailBox", im_path %>
          <% counter_of_incoming_messages = Message.where("to_member = ? and viewed = false", current_administrator).count %>
          <% if counter_of_incoming_messages != 0 %>
            <span class="new badge header">
              <%= counter_of_incoming_messages %>
            </span>
          <% end %>
        </br><%= link_to "Sended",  imsended_path %>
        </br><%= link_to "New message", sendmessage_path %>
        </br><%= link_to "Top kitchen's workers", topwaiters_path %>
        </br><%= link_to "View top dishes", lastweektop_path %>
        </br><%= link_to "Days Statistic", alldayslong_path %>
      </div>
      <div class="card-action">
        <%= link_to "Sign out", signout_path, method: "delete" %>
      </div>
    </div>
  </div>
</div>
<!-- End left nav bar -->
