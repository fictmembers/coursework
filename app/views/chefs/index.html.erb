<%= render 'layouts/header' %>

	<div class="row">
		<div class="col s10 offset-s1">
			<table id="chef">
			    <thead>
			          <tr>
										<th data-field="id">ID</th>
			              <th data-field="lastname"> <%=t :name_lastname %></th>
			              <th data-field="restaurant"> <%=t :restaurant %></th>
										<th data-field="created_at"> <%=t :created %></th>
                    <th data-field="edit"> <%=t :edit %></th>
		    				    <th data-field="delete"> <%=t :delete %></th>
			          </tr>
			    </thead>

			    <tbody>
			    	<% @chefs.each do |chef| %>
						<% restaurant = Restaurant.find(chef.restaurant_id) %>
			          <tr>
									<td> <%= chef.id %></td>
			            <td> <%= chef.lastname %></td>
			            <td> <%= restaurant.name %></td>
									<td> <%= chef.created_at %></td>
			            <td> <%= link_to "#{t('edit')}", edit_chef_path(chef) %></td>
	    					  <td> <%= link_to "#{t('delete')}", chef, method: :delete, data: { confirm: "#{t('you_sure')}" } %></td>
			          </tr>
			        <% end %>
			    <tbody>
			</table>
		</div>
	</div>
