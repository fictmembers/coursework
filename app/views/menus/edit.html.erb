<%= render 'layouts/header' %>
<div class="row">
  <div class="col s4 offset-s4">
    <div class="card">
      <div class="card-image">
        <%= image_tag("administrator_new.jpg")%>
        <span class="card-title grey-text text-lighten-2">
          <%=t :hello_menu %></span>
      </div>
      <div class="card-content">
        <%= form_for(@menu) do |f| %>
        <div class="field">
          <%= f.text_field :cuisine, class: "form-control", :placeholder => "#{t('new_cuisine')}" %>
        </br>
        <%= f.collection_select :restaurant_id, Restaurant.where(lang:I18n.locale), :id, :name, { prompt: "#{t('select_rest')}" }, class: "browser-default" %>
      </div>
      <div class="card-action">
        <button class="btn waves-effect waves-light blue-grey darken-4" type="submit" name="action"> <%=t :save_info %></button>
      </div>
    </div>
  </div>
</div>
<% end %>
