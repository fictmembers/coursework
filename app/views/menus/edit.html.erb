<%= render 'layouts/header' %>
<div class="row">
  <div class="col s4 offset-s4">
        <div class="card">
          <div class="card-image">
            <%= image_tag("administrator_new.jpg")%>
            <span class="card-title grey-text text-lighten-2">Adding new part of menu!</span>
          </div>
          <div class="card-content">
            <%= form_for(@menu) do |f| %>
              <div class="field">
                <%= f.text_field :cuisine, class: "form-control", :placeholder => "New cuisine" %> </br>
              </div>
          <div class="card-action">
            <button class="btn waves-effect waves-light cyan darken-4" type="submit" name="action">Save information</button>
          </div>
        </div>
      </div>
    </div>
    <% end %>
