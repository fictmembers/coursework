<%= render 'layouts/header' %>

<div class="row">
  <div class="col s10 offset-s1">
    <table id="menu">
      <thead>
        <tr>
          <th data-field="id"> ID</th>
          <th data-field="cuisine"> <%=t :menu %></th>
          <th data-field="created_at"> <%=t :created %></th>
          <th data-field="edit"> <%=t :edit %></th>
          <th data-field="delete"> <%=t :delete %></th>
        </tr>
      </thead>

      <tbody>
        <% @menus.each do |menu| %>
        <tr>
          <td> <%= menu.id %></td>
          <td> <%= menu.cuisine %></td>
          <td> <%= menu.created_at %></td>
          <td> <%= link_to "#{t('edit')}", edit_menu_path(menu) %></td>
          <td> <%= link_to "#{t('delete')}", menu, method: :delete, data: { confirm: "#{t('you_sure')}" } %></td>
        </tr>
        <% end %>
        <tbody></table>
      </div>
    </div>
