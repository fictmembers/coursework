<%= render 'layouts/header' %>
<div class="row">
  <div class="col s4 offset-s4">
        <div class="card">
          <div class="card-image">
            <%= image_tag("item.jpg")%>
            <span class="card-title grey-text text-lighten-2"> <%=t :hello_item %></span>
          </div>
          <div class="card-content">
            <%= form_for(@item) do |f| %>
              <div class="field">
                <%= f.text_field :description, :placeholder => "#{t('item_name')}"%>
                <%= f.select :lang, options_for_select([['Russian', 'ru'], ['English', 'en']]), :prompt => "#{t('choose_language')}", class: "browser-default" %>
                <%= f.number_field :price,     :placeholder => "#{t('set_price')}", :step => "any" %> </br>
                <%= f.collection_select :menu_id, Menu.where(lang:I18n.locale), :id, :cuisine, { prompt: "#{t('select_cuisine')}" }, class: "browser-default" %>
              </div>
          <div class="card-action">
            <button class="btn waves-effect waves-light blue-grey darken-4" type="submit" name="action"> <%=t :save_info %></button>
          </div>
        </div>
      </div>
    </div>
    <% end %>
