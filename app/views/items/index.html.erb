<%= render 'layouts/header' %>

	<div class="row">
		<div class="col s10 offset-s1">
			<table id="item">
			    <thead>
			          <tr>
										<th data-field="id"> ID</th>
										<th data-field="id"> <%=t :restaurant %></th>
			              <th data-field="description"> <%=t :description %></th>
			              <th data-field="price"> <%=t :price %></th>
                    <th data-field="menu"> <%=t :menu %></th>
										<th data-field="created_at"> <%=t :created %></th>
                    <th data-field="edit"> <%=t :edit %></th>
		    				    <th data-field="delete"> <%=t :delete %></th>
			          </tr>
			    </thead>

			    <tbody>
			    	<% @items.each do |item| %>
						<% menu = Menu.find(item.menu_id) %>
						<% restaurant = Restaurant.find(menu.restaurant_id) %>
			          <tr>
									<td> <%= item.id %></td>
									<td> <%= restaurant.name %></td>
			            <td> <%= item.description %></td>
			            <td> <%= item.price %> â‚¬</td>
                  <td> <%= menu.cuisine %></td>
									<td> <%= item.created_at %></td>
			            <td> <%= link_to "#{t('edit')}", edit_item_path(item) %></td>
	    					  <td> <%= link_to "#{t('delete')}", item, method: :delete, data: { confirm: "#{t('you_sure')}" } %></td>
			          </tr>
			        <% end %>
			    <tbody>
			</table>
		</div>
	</div>
