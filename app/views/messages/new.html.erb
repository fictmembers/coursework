<%= render 'layouts/header' %>

<div class="row">
  <%= render 'administrators/leftmenu' %>
  <div class="col s10 offset-s2">
    <div class="card">
      <%= form_for(@message) do |f| %>
        <%= f.hidden_field :from_member, :value => current_administrator.id %>
        <div class="row">
          <div class="col s4">
            <ul class="collection with-header">
              <li class="collection-header"><h5>Message</h5></li>
            </ul>
            <p>From: <%= current_administrator.login %></p>
            <p>To: <%= f.select :to_member, administrator_select, :placeholder => "Select administrator" %></p>
          </div>
          <div class="col s8">
            <ul class="collection with-header">
              <li class="collection-item">
                  <%= f.text_field :theme, :placeholder => "Theme of message" %>
              </li>
              <li class="collection-item">
                <%= f.text_area  :text,  :placeholder => "Text goes there...", class: "materialize-textarea" %>
              </li>
              <li class="collection-item">
                  <%= f.submit "Send message", class: "btn blue-grey darken-4" %>
              </li>
          </div>
        </div>
    <% end %>
    </div>
  </div>
</div>
