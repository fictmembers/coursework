<%= render 'layouts/header' %>

<div class="row">
  <%= render 'administrators/administratorsleftmenu' %>
  <div class="col s10 offset-s2">
    <div class="card">
      <div class="row">
        <div class="col s4">
          <ul class="collection with-header">
            <li class="collection-header">
              <h5> <%=t :message %></h5>
            </li>
            <li class="collection-item">
              <b> <%=t :message_from %></b>
              <%= @from_member.login %></br>
            <b> <%=t :message_to %></b>
            <%= @to_member.login %>
          </li>
        </ul>
      </div>
      <div class="col s8">
        <ul class="collection with-header">
          <li class="collection-header">
            <h5><%= @message.theme %></h5>
          </li>
          <li class="collection-item">
            <%= @message.text.capitalize %>
          </li>
          <li class="collection-item">
            <%=t :reply_to %>
            <%= link_to @from_member.login, sendmessage_path %>
            <%=t :or_delete %>
            <%= link_to "#{t('delete')}", @message, method: :delete, data: { confirm: "#{t('you_sure')}" } %>
          </li>
        </div>
      </div>
    </div>
  </div>
</div>
