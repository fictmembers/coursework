<%= render 'layouts/header' %>

<div class="row">
  <%= render 'administrators/administratorsleftmenu' %>
  <div class="col s10 offset-s2">
    <div class="card">
        <div class="row">
          <div class="col s4">
            <ul class="collection with-header">
              <li class="collection-header"><h5>Message</h5></li>
              <li class="collection-item"><b>From:</b> <%= @from_member.login %></br>
                                          <b>To:</b> <%= @to_member.login %>
              </li>
            </ul>
          </div>
          <div class="col s8">
            <ul class="collection with-header">
              <li class="collection-header"><h5><%= @message.theme %></h5></li>
              <li class="collection-item">
                <%= @message.text.capitalize %>
              </li>
              <li class="collection-item">
                Reply to <%= link_to @from_member.login, sendmessage_path %> or delete <%= link_to "Delete", @message, method: :delete, data: { confirm: "You sure?" } %>
              </li>
          </div>
        </div>
    </div>
  </div>
</div>
